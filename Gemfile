source 'https://rubygems.org'

gem 'rails', '3.2.3'

# Database
gem 'sqlite3'

# Server
gem 'thin'

# Server Templates
gem 'haml'

# Javascript
gem 'json'
gem 'jquery-rails'

# JSON API
gem 'rabl'
gem 'yajl-ruby'

# Authentication
gem 'devise'

# Forms
gem 'simple_form'

# Paging
gem 'kaminari'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'haml_coffee_assets'
  gem 'uglifier'
end

group :development do
  # Generators
  gem 'haml-rails'

  # To use debugger
  # gem 'ruby-debug19', :require => 'ruby-debug'
end

group :development, :test do
  # Rspec
  gem 'rspec-rails'

  # Fxtures
  gem 'factory_girl_rails'
end

group :test do
  # Pretty printed test output
  gem 'turn', :require => false

  # Shoulda
  gem 'shoulda'
end